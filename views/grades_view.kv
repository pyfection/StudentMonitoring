<GradesView>:
    toolbar: toolbar
    grades_list: grades_list
    orientation: "vertical"

    NativoToolbar:
        id: toolbar
        title: "Grades"
        left_action_items: [['menu', lambda x: root.nav_drawer.set_state("open")]]
        right_action_items: [['content-save', lambda x: root.save(), "Save"]]

    ScrollView:
        MDBoxLayout:
            id: grades_list
            adaptive_height: True
            orientation: "vertical"
            size_hint_x: None
            width: 2000

<GradesRow>:
    padding: (10, 10, 10, 10)
    spacing: 10
    adaptive_height: True

    MDLabel:
        id: name
        text: root.name

    DatePickerButton:
        id: date
        format: '%b-%Y'
        date: root.date
        on_date: root.date = self.date

    MDDropDownItem:
        id: gtype
        text: "Grade Type"  #root.key_map.get(root.gtype, '')
        on_release: root.gtype_menu.open()

    NumberInput:
        id: math
        hint_text: "Math"
        text: root.math
        on_text: root.math = self.text

    NumberInput:
        id: english
        hint_text: "English"
        text: root.english
        on_text: root.english = self.text

    NumberInput:
        id: hindi
        hint_text: "Hindi"
        text: root.hindi
        on_text: root.hindi = self.text

