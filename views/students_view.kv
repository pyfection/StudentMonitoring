<StudentsView>:
    toolbar: toolbar
    orientation: "vertical"

    NativoToolbar:
        id: toolbar
        title: "Students"
        left_action_items: [['menu', lambda x: root.nav_drawer.set_state("open")]]
        right_action_items: [['account-plus', lambda x: root.new_student(), 'Add Student']]

    RecycleView:
        id: list
        size_hint_y: None
        height: root.height - toolbar.height  # Refused to size correctly the normal way
        viewclass: 'OneLineIconListItem'

        RecycleBoxLayout:
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
