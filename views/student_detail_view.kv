<StudentDetailView>:
    toolbar: toolbar
    student_id: student_id
    name: name
    gender_m: gender_m
    gender_f: gender_f
    date_of_joining: date_of_joining
    group: group
    name_father: name_father
    name_mother: name_mother
    address: address
    phone_mother: phone_mother
    phone_father: phone_father
    dob: dob
    aadhar: aadhar
    official_class: official_class
    goes_government_school_yes: goes_government_school_yes
    goes_government_school_no: goes_government_school_no
    occupation_mother: occupation_mother
    occupation_father: occupation_father
    comment: comment
    orientation: "vertical"

    NativoToolbar:
        id: toolbar
        title: "Students"
        left_action_items: [['menu', lambda x: root.nav_drawer.set_state("open")]]
        right_action_items: [['content-save', lambda x: root.submit(), 'Save Student']]

    ScrollView:
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height

            MDLabel
                id: student_id
                size_hint_y: None
                height: dp(50)

            MDTextField:
                id: name
                hint_text: "Name"
                write_tab: False

            BoxLayout:
                size_hint_y: None
                height: dp(50)

                MDLabel:
                    text: "Gender:"

                MDFillRoundToggleButton:
                    id: gender_m
                    text: "Male"
                    group: "gender"
                    background_down: app.theme_cls.primary_color
                    background_normal: (1, 1, 1, 0)
                    md_bg_color: app.theme_cls.primary_color if self.state == 'down' else self.background_normal

                MDFillRoundToggleButton:
                    id: gender_f
                    text: "Female"
                    group: "gender"
                    background_down: app.theme_cls.primary_color
                    background_normal: (1, 1, 1, 0)
                    md_bg_color: app.theme_cls.primary_color if self.state == 'down' else self.background_normal

            BoxLayout:
                size_hint_y: None
                height: dp(50)

                MDLabel:
                    text: "Date of Joining:"

                DatePickerButton:
                    id: date_of_joining
                    format: '%d-%m-%Y'
                    min_date: date.fromisoformat("2015-01-01")
                    min_year: 2015

            MDTextField:
                id: group
                hint_text: "Group"
                write_tab: False

            MDTextField:
                id: name_father
                hint_text: "Father's name"
                write_tab: False

            MDTextField:
                id: name_mother
                hint_text: "Mother's name"
                write_tab: False

            MDTextField:
                id: address
                hint_text: "Address"
                write_tab: False

            NumberInput:
                id: phone_mother
                min_text_length: 10
                max_text_length: 10
                hint_text: "Phone number (Mother)"
                write_tab: False

            NumberInput:
                id: phone_father
                min_text_length: 10
                max_text_length: 10
                hint_text: "Phone number (Father)"
                write_tab: False

            BoxLayout:
                size_hint_y: None
                height: dp(50)

                MDLabel:
                    text: "Date of Birth:"

                DatePickerButton:
                    id: dob
                    format: '%d-%m-%Y'
                    min_date: date.fromisoformat("2000-01-01")
                    min_year: 2000

            NumberInput:
                id: aadhar
                min_text_length: 12
                max_text_length: 12
                hint_text: "Aadhar Card number"
                write_tab: False

            MDTextField:
                id: official_class
                hint_text: "Official Class"
                write_tab: False

            MDBoxLayout:
                size_hint_y: None
                height: 80

                MDLabel:
                    text: "Goes to government school:"

                MDFillRoundToggleButton:
                    id: goes_government_school_yes
                    text: "Yes"
                    group: "government_school"
                    background_down: app.theme_cls.primary_color
                    background_normal: (1, 1, 1, 0)
                    md_bg_color: app.theme_cls.primary_color if self.state == 'down' else self.background_normal

                MDFillRoundToggleButton:
                    id: goes_government_school_no
                    text: "No"
                    group: "government_school"
                    background_down: app.theme_cls.primary_color
                    background_normal: (1, 1, 1, 0)
                    md_bg_color: app.theme_cls.primary_color if self.state == 'down' else self.background_normal

            MDTextField:
                id: occupation_mother
                hint_text: "Mother' main occupation"
                write_tab: False

            MDTextField:
                id: occupation_father
                hint_text: "Father' main occupation"
                write_tab: False

            MDTextField:
                id: comment
                write_tab: False
                multiline: True
                hint_text: "Comment"

            Widget:
