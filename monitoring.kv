ScreenManager:
    Screen:
        name: "auth"
        AuthView:
            id: auth_view
            orientation: "vertical"
            existing_link: existing_link
            BoxLayout:
                TextInput:
                    id: first_name
                    write_tab: False
                    hint_text: "First Name"
                    multiline: False
                TextInput:
                    id: last_name
                    write_tab: False
                    hint_text: "Last Name"
                    multiline: False
            TextInput:
                id: email
                write_tab: False
                hint_text: "(Google) Email"
                multiline: False
            TextInput:
                id: private_key
                write_tab: False
                hint_text: "Private Key"
            TextInput:
                id: existing_link
                write_tab: False
                hint_text: "Existing Sheet Link (Optional)"
                multiline: False
            BoxLayout:
                ToggleButton:
                    id: teacher_button
                    text: "Teacher"
                    group: "account_type"
                    state: "down"
                ToggleButton:
                    id: admin_button
                    text: "Admin"
                    group: "account_type"
                    disabled: True  # ToDo: remove once teacher view exists
            Button:
                text: "Authenticate"
                disabled: not (first_name.text and last_name.text and email.text and private_key.text)
                on_press: auth_view.check_authenticate()

    Screen:
        name: "teacher"
        TeacherView:
            id: teacher_view

            student_list: student_list

            TabbedPanel:
                do_default_tab: False

                TabbedPanelItem:
                    text: "Today"

                TabbedPanelItem:
                    text: "Students"

                    BoxLayout:
                        orientation: "vertical"
                        Button:
                            id: add_student
                            text: "Add Student"
                            size_hint_y: None
                            height: 50
                            on_press: root.current = "add_child"

                        ScrollView:
                            do_scroll_x: False
                            Accordion:
                                id: student_list
                                orientation: "vertical"
                                size_hint_y: None
                                on_children: self.height = len(self.children) * 50 + 210
                                minimum_height: 100

                TabbedPanelItem:
                    text: "Overview"

                TabbedPanelItem:
                    text: "Fees"

    Screen:
        name: "add_child"
        NewChildView:
            id: new_child_view
            orientation: "vertical"

            TextInput:
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Name"
                multiline: False

            TextInput:
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: 'Date of joining'
                multiline: False

            TextInput:
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Group"
                multiline: False

            TextInput:
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Father's name"
                multiline: False

            TextInput:
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Mother's name"
                multiline: False

            TextInput:
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Address"
                multiline: False

            TextInput:
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Phone number (Mother)"
                multiline: False

            TextInput:
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Phone number (Father)"
                multiline: False

            TextInput:
                size_hint_y: None
                height: 30
                write_tab: False
