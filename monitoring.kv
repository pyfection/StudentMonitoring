#:import date datetime.date
#:import timedelta datetime.timedelta
#:import Animation kivy.animation.Animation

Screen:
    manager: manager

    MDNavigationLayout:

        ScreenManager:
            nav_drawer: nav_drawer
            id: manager

            Screen:
                name: "splash"
                MDBoxLayout:
                    orientation: "vertical"
                    padding: 50, 50, 50, 50
                    spacing: 50

                    Image:
                        source: "Greenworld_Logo_Coloured.png"

                    ScatterLayout:
                        size_hint: 1, 1
                        on_parent: anim = Animation(scale=1.5) + Animation(scale=1); anim.repeat = True; anim.start(self)
                        Label:
                            size_hint: 1, 1
                            text: "Loading..."
                            color: 0.2, 0.7, 0.3, 1
                            font_size: 30
                            bold: True
                            text_size: self.size
                            halign: 'center'
                            valign: 'middle'

            Screen:
                name: "auth"
                AuthView:
                    private_key: private_key
                    first_name: first_name
                    last_name: last_name
                    email: email

                    id: auth_view
                    orientation: "vertical"
                    BoxLayout:
                        TextInput:
                            id: first_name
                            write_tab: False
                            hint_text: "First Name"
                            text: self.parent.parent.session.get('first_name')
                            multiline: False
                        TextInput:
                            id: last_name
                            write_tab: False
                            hint_text: "Last Name"
                            text: self.parent.parent.session.get('last_name')
                            multiline: False
                    TextInput:
                        id: email
                        write_tab: False
                        hint_text: "Email"
                        text: self.parent.session.get('email')
                        multiline: False
                    TextInput:
                        id: private_key
                        write_tab: False
                        hint_text: "Private Key"
                    BoxLayout:
                        ToggleButton:
                            id: teacher_button
                            text: "Teacher"
                            group: "account_type"
                            state: "down"
                        ToggleButton:
                            id: admin_button
                            text: "Admin"
                            group: "account_type"
                            disabled: True  # ToDo: remove once teacher view exists
                    Button:
                        text: "Authenticate"
        #                disabled: not (first_name.text and last_name.text and email.text and private_key.text)
                        on_press: app.check_authenticate(private_key.text, email.text, first_name.text, last_name.text)

            Screen:
                name: "today"
                on_pre_enter: today_view.reload()

                TodayView:
                    nav_drawer: nav_drawer
                    id: today_view

            Screen:
                name: "students"
                on_pre_enter: students_view.reload()

                StudentsView:
                    nav_drawer: nav_drawer
                    id: students_view

            Screen:
                name: "grades"
                on_pre_enter: grades_view.reload()

                GradesView:
                    nav_drawer: nav_drawer
                    id: grades_view

            Screen:
                name: "fees"
                on_pre_enter: fees_view.reload()

                FeesView:
                    nav_drawer: nav_drawer
                    id: fees_view

            Screen:
                name: "plan"
                on_pre_enter: plan_view.reload()

                PlanView:
                    nav_drawer: nav_drawer
                    id: plan_view

            Screen:
                name: "overview"
                on_pre_enter: overview_view.reload()

                OverviewView:
                    nav_drawer: nav_drawer
                    id: overview_view


            Screen:
                name: "add_child"

                NewStudentView:
                    id: new_student_view

        MDNavigationDrawer:
            id: nav_drawer

            BoxLayout:
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"

                AnchorLayout:
                    anchor_x: "left"
                    size_hint_y: None
                    height: avatar.height

                    Image:
                        id: avatar
                        source: "Greenworld_Logo_Coloured.png"

                ScrollView:

                    MDList:
                        TwoLineIconListItem:
                            text: "Today"
                            secondary_text: date.today().strftime('%d-%m-%Y')
                            on_release:
                                manager.current = 'today'
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "calendar-today"

                        OneLineIconListItem:
                            text: "Students"
                            on_release:
                                manager.current = 'students'
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "human-child"

                        TwoLineIconListItem:
                            text: "Grades"
                            secondary_text: (date.today().replace(day=1) - timedelta(days=1)).strftime('%b-%Y')
                            on_release:
                                manager.current = 'grades'
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "star"

                        TwoLineIconListItem:
                            text: "Fees"
                            secondary_text: (date.today().replace(day=1) - timedelta(days=1)).strftime('%b-%Y')
                            on_release:
                                manager.current = 'fees'
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "cash"

                        OneLineIconListItem:
                            text: "Plan"
                            on_release:
                                manager.current = 'plan'
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "notebook"

                        OneLineIconListItem:
                            text: "Overview"
                            on_release:
                                manager.current = 'overview'
                                nav_drawer.set_state("close")
                            IconLeftWidget:
                                icon: "sunglasses"


<NativoToolbar@MDToolbar>:
    id: toolbar
    pos_hint: {"top": 1}
    title: "Greenworld Education"
    elevation: 10
