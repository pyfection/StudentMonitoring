ScreenManager:
    Screen:
        name: "auth"
        AuthView:
            id: auth_view
            orientation: "vertical"
            BoxLayout:
                TextInput:
                    id: first_name
                    write_tab: False
                    hint_text: "First Name"
                    text: self.parent.parent.session.get('first_name')
                    multiline: False
                TextInput:
                    id: last_name
                    write_tab: False
                    hint_text: "Last Name"
                    text: self.parent.parent.session.get('last_name')
                    multiline: False
            TextInput:
                id: email
                write_tab: False
                hint_text: "Email"
                text: self.parent.session.get('email')
                multiline: False
            TextInput:
                id: private_key
                write_tab: False
                hint_text: "Private Key"
            BoxLayout:
                ToggleButton:
                    id: teacher_button
                    text: "Teacher"
                    group: "account_type"
                    state: "down"
                ToggleButton:
                    id: admin_button
                    text: "Admin"
                    group: "account_type"
                    disabled: True  # ToDo: remove once teacher view exists
            Button:
                text: "Authenticate"
#                disabled: not (first_name.text and last_name.text and email.text and private_key.text)
                on_press: auth_view.check_authenticate()

    Screen:
        name: "teacher"
        TeacherView:
            id: teacher_view

            attendance_list: attendance_list
            student_list: student_list

            TabbedPanel:
                do_default_tab: False

                TabbedPanelItem:
                    text: "Today"

                    ScrollView:
                        do_scroll_x: False
                        BoxLayout:
                            id: attendance_list
                            orientation: "vertical"
                            size_hint_y: None
                            on_children: self.height = len(self.children) * 30
                            minimum_height: 100

                TabbedPanelItem:
                    text: "Students"

                    BoxLayout:
                        orientation: "vertical"
                        Button:
                            id: add_student
                            text: "Add Student"
                            size_hint_y: None
                            height: 50
                            on_press: root.current = "add_child"

                        ScrollView:
                            do_scroll_x: False
                            Accordion:
                                id: student_list
                                orientation: "vertical"
                                size_hint_y: None
                                on_children: self.height = len(self.children) * 70 + 220
                                minimum_height: 100

                TabbedPanelItem:
                    text: "Overview"

                TabbedPanelItem:
                    text: "Fees"

    Screen:
        name: "add_child"
        NewChildView:
            id: new_child_view
            orientation: "vertical"

            name: name
            date_of_joining: date_of_joining
            group: group
            name_father: name_father
            name_mother: name_mother
            address: address
            phone_mother: phone_mother
            phone_father: phone_father
            dob: dob
            aadhar: aadhar
            official_class: official_class
            goes_government_school_yes: goes_government_school_yes
            goes_government_school_no: goes_government_school_no
            occupation_mother: occupation_mother
            occupation_father: occupation_father
            baseline_math: baseline_math
            baseline_english: baseline_english
            baseline_hindi: baseline_hindi
            comment: comment

            TextInput:
                id: name
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Name"
                multiline: False

            TextInput:
                id: date_of_joining
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: 'Date of joining (YYYY-MM-DD)'
                multiline: False

            TextInput:
                id: group
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Group"
                multiline: False

            TextInput:
                id: name_father
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Father's name"
                multiline: False

            TextInput:
                id: name_mother
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Mother's name"
                multiline: False

            TextInput:
                id: address
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Address"
                multiline: False

            TextInput:
                id: phone_mother
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Phone number (Mother)"
                multiline: False

            TextInput:
                id: phone_father
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Phone number (Father)"
                multiline: False

            TextInput:
                id: dob
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Date of birth (YY-MM-DD)"
                multiline: False

            TextInput:
                id: aadhar
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Aadhar Card number"
                multiline: False

            TextInput:
                id: official_class
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Official Class"
                multiline: False

            BoxLayout:
                size_hint_y: None
                height: 30

                Label:
                    text: "Goes to government school: "

                ToggleButton:
                    id: goes_government_school_yes
                    text: "Yes"
                    group: "government_school"
                    state: "down"
                    size_hint_x: None
                    width: 50

                ToggleButton:
                    id: goes_government_school_no
                    text: "No"
                    group: "government_school"
                    size_hint_x: None
                    width: 50

            TextInput:
                id: occupation_mother
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Mother' main occupation"
                multiline: False

            TextInput:
                id: occupation_father
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Father' main occupation"
                multiline: False

            TextInput:
                id: baseline_math
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Baseline Math"
                multiline: False

            TextInput:
                id: baseline_english
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Baseline English"
                multiline: False

            TextInput:
                id: baseline_hindi
                size_hint_y: None
                height: 30
                write_tab: False
                hint_text: "Baseline Hindi"
                multiline: False

            TextInput:
                id: comment
                write_tab: False
                hint_text: "Comment"

            Button:
                size_hint_y: None
                height: 30
                text: "Add"
                on_press: self.parent.submit()
