<StudentsView>:
    toolbar: toolbar
    student_list: student_list
    orientation: "vertical"

    NativoToolbar:
        id: toolbar
        left_action_items: [['menu', lambda x: root.nav_drawer.set_state("open")]]
        right_action_items: [['account-plus', lambda x: root.add_child(), 'Add Student']]

    ScrollView:
        MDBoxLayout:
            id: student_list
            adaptive_height: True
            orientation: "vertical"

<StudentContent>
    adaptive_height: True
    orientation: "vertical"

    TwoLineIconListItem:
        divider: None
        text: root.student_name
        secondary_text: "Name of student"

    TwoLineIconListItem:
        divider: None
        text: root.student_gender
        secondary_text: "Gender of student"

    TwoLineIconListItem:
        divider: None
        text: root.joining_date
        secondary_text: 'Date of joining'

    TwoLineIconListItem:
        divider: None
        text: root.group
        secondary_text: "gr #"

    TwoLineIconListItem:
        divider: None
        text: root.name_father
        secondary_text: "Father's name"

    TwoLineIconListItem:
        divider: None
        text: root.name_mother
        secondary_text: "Mother's name"

    TwoLineIconListItem:
        divider: None
        text: root.address
        secondary_text: "Address"

    TwoLineIconListItem:
        divider: None
