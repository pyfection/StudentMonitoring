<RangeRow>:
    size_hint_y: None
    height: 400

    MDLabel:
        halign: "center"
        size_hint_x: None
        width: 280
        text: '\n'.join((date.fromisoformat(root.start).strftime(settings.date_format), date.fromisoformat(root.end).strftime(settings.date_format)))


