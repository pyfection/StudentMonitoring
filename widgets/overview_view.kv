#:import calendar calendar

<OverviewView>:
    toolbar: toolbar
    orientation: "vertical"

    NativoToolbar:
        id: toolbar
        left_action_items: [['menu', lambda x: root.nav_drawer.set_state("open")]]

    MDTabs:
        id: tabs


<OverviewTab>:
    grid: grid
    text: f'{calendar.month_name[self.month]}-{self.year}'

    RecycleView:
        id: grid
        viewclass: 'GridLabel'

        canvas.before:
            Color:
                rgba: app.theme_cls.primary_color
            Rectangle:
                size: self.size
                pos: self.pos

        RecycleGridLayout:
            id: layout
            row_force_default: True
            row_default_height: 120
            cols: 41
            width: 5700  # Needs to be updated if any column width changes!
            size_hint_x: None
            spacing: 10
            padding: 5, 5, 5, 5


<GridLabel>:
    halign: 'center'
    size_hint_x: None
    size_hint_y: 1
    bg_color: 1, 1, 1, 1

    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            size: self.size
            pos: self.pos
